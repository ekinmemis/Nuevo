@model Nuevo.Admin.Models.ResidanceModels.ResidanceModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Page header -->
    <div class="page-header page-header-light">
        <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
            <div class="d-flex">
                <div class="breadcrumb">
                    <a href="@Url.Action("List","Residace")" class="breadcrumb-item"><i class="icon-home2 mr-2"></i>Residances</a>
                    <span class="breadcrumb-item active">Edit</span>
                </div>

                <a href="@Url.Action("List","Residace")" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
        </div>
    </div>
    <!-- /page header -->
    <!-- Content area -->
    <div class="content">

        @using (Html.BeginForm("Edit", "Residace", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="card">
                <div class="card-header bg-white header-elements-sm-inline">
                    <h6 class="card-title"> Residance Edit </h6>
                    <div class="header-elements">
                        <button type="submit" name="save" value="save" class="btn bg-blue"><i class="icon-floppy-disk mr-1"></i> Save </button>
                    </div>
                </div>

                <div class="card-body">

                    @Html.HiddenFor(f => f.Id)
                    @Html.HiddenFor(f => f.ApplicationUserId)
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Description :</label>
                        <div class="col-md-10">
                            @Html.EditorFor(f => f.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Heating :</label>
                        <div class="col-md-10">
                            @Html.EditorFor(f => f.Heating, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Heating, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Name :</label>
                        <div class="col-md-10">
                            @Html.EditorFor(f => f.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Square Meters :</label>
                        <div class="col-md-10">
                            @Html.EditorFor(f => f.SquareMeters, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SquareMeters, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Numbers of Room :</label>
                        <div class="col-md-10">
                            @Html.EditorFor(f => f.NumbersOfRoom, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NumbersOfRoom, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Building Age :</label>
                        <div class="col-md-10">
                            @Html.EditorFor(f => f.BuildingAge, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BuildingAge, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Floor Location :</label>
                        <div class="col-md-10">
                            @Html.EditorFor(f => f.FloorLocation, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FloorLocation, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Dues :</label>
                        <div class="col-md-10">
                            @Html.EditorFor(f => f.Dues, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Dues, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Number of Bathrooms :</label>
                        <div class="col-md-10">
                            @Html.EditorFor(f => f.NumberOfBathrooms, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NumberOfBathrooms, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Price :</label>
                        <div class="col-md-10">
                            @Html.EditorFor(f => f.Price, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Swap :</label>
                        <div class="col-md-10">
                            @Html.CheckBoxFor(model => model.Swap, new { @class = "form-check" })
                            @Html.ValidationMessageFor(model => model.Swap, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Accessible by Video Call :</label>
                        <div class="col-md-10">
                            @Html.CheckBoxFor(model => model.AccessibleByVideoCall, new { @class = "form-check" })
                            @Html.ValidationMessageFor(model => model.AccessibleByVideoCall, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Furnished :</label>
                        <div class="col-md-10">
                            @Html.CheckBoxFor(model => model.Furnished, new { @class = "form-check" })
                            @Html.ValidationMessageFor(model => model.Furnished, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Balcony :</label>
                        <div class="col-md-10">
                            @Html.CheckBoxFor(model => model.Balcony, new { @class = "form-check" })
                            @Html.ValidationMessageFor(model => model.Balcony, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- /content area -->
</div>




