@{ Layout = null;}
@model Nuevo.Admin.Models.AccountModels.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Nuevo</title>

    <!-- Global stylesheets -->
    <link href="~/content/limitless/global_assets/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
    <link href="~/content/limitless/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/content/limitless/assets/css/bootstrap_limitless.min.css" rel="stylesheet" type="text/css">
    <link href="~/content/limitless/assets/css/layout.min.css" rel="stylesheet" type="text/css">
    <link href="~/content/limitless/assets/css/components.min.css" rel="stylesheet" type="text/css">
    <link href="~/content/limitless/assets/css/colors.min.css" rel="stylesheet" type="text/css">
    <!-- /global stylesheets -->
</head>

<body>
    <!-- Page content -->
    <div class="page-content">

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Content area -->
            <div class="content d-flex justify-content-center align-items-center">

                <!-- Login form -->

                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <i class="icon-reading icon-2x text-slate-300 border-slate-300 border-3 rounded-round p-3 mb-3 mt-1"></i>
                                <h5 class="mb-0">Login to your account</h5>
                                <span class="d-block text-muted">Enter your credentials below</span>
                            </div>

                            <div class="form-group form-group-feedback form-group-feedback-left">
                                @Html.EditorFor(f => f.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })

                                <div class="form-control-feedback">
                                    <i class="icon-user text-muted"></i>
                                </div>
                            </div>

                            <div class="form-group form-group-feedback form-group-feedback-left">
                                @Html.EditorFor(f => f.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                                <div class="form-control-feedback">
                                    <i class="icon-lock2 text-muted"></i>
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Sign in <i class="icon-circle-right2 ml-2"></i></button>
                                <a href="@Url.Action("Register","Account")" class="btn btn-secondary btn-block">Register</a>
                            </div>
                        </div>
                    </div>
                }
                <!-- /login form -->

            </div>
            <!-- /content area -->
        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</body>

</html>
