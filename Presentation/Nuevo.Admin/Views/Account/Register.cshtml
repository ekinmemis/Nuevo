@using Nuevo.Admin.Models.AccountModels
@model RegisterModel
@{

    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Register</title>

    <!-- Global stylesheets -->
    <link href="~/content/limitless/global_assets/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
    <link href="~/content/limitless/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/content/limitless/assets/css/bootstrap_limitless.min.css" rel="stylesheet" type="text/css">
    <link href="~/content/limitless/assets/css/layout.min.css" rel="stylesheet" type="text/css">
    <link href="~/content/limitless/assets/css/components.min.css" rel="stylesheet" type="text/css">
    <link href="~/content/limitless/assets/css/colors.min.css" rel="stylesheet" type="text/css">
    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script src="~/content/limitless/global_assets/js/main/jquery.min.js"></script>
    <script src="~/content/limitless/global_assets/js/main/bootstrap.bundle.min.js"></script>
    <script src="~/content/limitless/global_assets/js/plugins/loaders/blockui.min.js"></script>
    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script src="~/content/limitless/global_assets/js/plugins/visualization/d3/d3.min.js"></script>
    <script src="~/content/limitless/global_assets/js/plugins/visualization/d3/d3_tooltip.js"></script>
    <script src="~/content/limitless/global_assets/js/plugins/forms/styling/switchery.min.js"></script>
    <script src="~/content/limitless/global_assets/js/plugins/ui/moment/moment.min.js"></script>
    <script src="~/content/limitless/global_assets/js/plugins/pickers/daterangepicker.js"></script>

    <script src="~/content/limitless/assets/js/app.js"></script>
    <script src="~/content/limitless/global_assets/js/demo_pages/dashboard.js"></script>
    <script src="~/content/limitless/global_assets/js/demo_charts/pages/dashboard/light/streamgraph.js"></script>
    <script src="~/content/limitless/global_assets/js/demo_charts/pages/dashboard/light/sparklines.js"></script>
    <script src="~/content/limitless/global_assets/js/demo_charts/pages/dashboard/light/lines.js"></script>
    <script src="~/content/limitless/global_assets/js/demo_charts/pages/dashboard/light/areas.js"></script>
    <script src="~/content/limitless/global_assets/js/demo_charts/pages/dashboard/light/donuts.js"></script>
    <script src="~/content/limitless/global_assets/js/demo_charts/pages/dashboard/light/bars.js"></script>
    <script src="~/content/limitless/global_assets/js/demo_charts/pages/dashboard/light/progress.js"></script>
    <script src="~/content/limitless/global_assets/js/demo_charts/pages/dashboard/light/heatmaps.js"></script>
    <script src="~/content/limitless/global_assets/js/demo_charts/pages/dashboard/light/pies.js"></script>
    <script src="~/content/limitless/global_assets/js/demo_charts/pages/dashboard/light/bullets.js"></script>
    <!-- /theme JS files -->
    <!--DataTables CDN-->
    <link href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/limitless/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
    <!--/dataTables CDN-->
</head>

<body>
    <!-- Page content -->
    <div class="page-content">
        <!-- Main content -->
        <div class="content-wrapper">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!-- Content area -->
            <div class="content d-flex justify-content-center align-items-center">
                <!-- Registration form -->
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "flex-fill" }))
                {
                    <div class="row">
                        <div class="col-lg-6 offset-lg-3">
                            <div class="card mb-0">
                                <div class="card-body">
                                    <div class="text-center mb-3">
                                        <i class="icon-plus3 icon-2x text-success border-success border-3 rounded-round p-3 mb-3 mt-1"></i>
                                        <h5 class="mb-0">Register</h5>
                                        @Html.AntiForgeryToken()
                                    </div>

                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                   
                                    @*<div class="form-group row">
                                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>*@
                                    <button type="submit" class="btn bg-teal-400 btn-labeled btn-labeled-right"><b><i class="icon-plus3"></i></b> Register</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!-- /registration form -->
            </div>
            <!-- /content area -->
        </div>
        <!-- /main content -->
    </div>
    <!-- /page content -->
     
</body>
</html>
 